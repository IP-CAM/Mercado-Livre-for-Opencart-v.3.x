<script type="text/javascript">
    $('fieldset legend').css('cursor', 'pointer');
    $('.nav-tabs li:first').addClass('active');
    $('.tab-content div:first').addClass('active');
    $('fieldset legend').click(function () {
        $(this).parent().find('div').slideToggle('slow');
    });
</script>

{{ footer }}